@model List<EsunBankSocialPlatform.Models.DisplayViewModel>

@{
    ViewData["Title"] = "首頁";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>

	<div class="container px-4 px-lg-5">
		<div class="row gx-4 gx-lg-5 justify-content-center">
			<div class="col-md-10 col-lg-8 col-xl-7">
				@foreach (var Post in Model)
				{
					<div class="post-preview">
						<a asp-controller="Social" asp-action="Post" asp-route-id="@Post.PostId">
							<h2 class="post-title">@Post.Title</h2>
						</a>
						<p class="post-meta">
							@Post.UserName Created At @Post.CreateTime
						</p>
					</div>
					<hr class="my-4">
				}
				<div class="d-flex justify-content-end mb-4">
					<a class="btn btn-primary text-uppercase" asp-controller="Social" asp-action="Display">More →</a>
				</div>
			</div>
		</div>
	</div>
</div>
